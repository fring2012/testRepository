<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#03A9F4">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </include>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:layout_widthPercent="60%w"
        app:layout_heightPercent="60%w"
        android:layout_below="@id/toolbar">
        <com.example.administrator.ota_sdk.view.ui.centerView.CenterCircleView
            android:id="@+id/centerCircleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/arrowImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_upward_black_24dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:layout_widthPercent="40%"
            app:layout_heightPercent="40%"/>
        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="40sp"
            android:text="60%"
            android:textColor="@color/colorWhite"
            />
        <TextView
            android:id="@+id/resultInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/arrowImage"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:text="当前版本:0.0.8"
            android:textColor="@color/colorWhite"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <TextView
        android:id="@+id/latestVersionInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/center"
        app:layout_heightPercent="15%"/>
    <TextView
        android:id="@+id/currentVersionInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="40sp"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/latestVersionInfo"/>
</com.zhy.android.percent.support.PercentRelativeLayout>